<!--轮播图组件-->
<swiper class='swiper' circular="true" autoplay="true" indicator-dots="true" interval="3000" duration="300" indicator-active-color="#EE7A77" style="height:{{bannerHeight}};width:{{bannerWidth}}">
  <block wx:for="{{list}}" wx:key="{{index}}">
    <swiper-item class="swiper-item">
      <image src="{{item.url}}" mode="scaleToFill" class='banner_image' style="height:{{bannerHeight}};width:{{bannerWidth}};" />
    </swiper-item>
  </block>
</swiper>