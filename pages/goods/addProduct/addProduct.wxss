/* pages/goods/addProduct/addProduct.wxss */

.horizental {
  display: flex;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-bottom: 15rpx;
}

.horizental input {
  flex-grow: 1;
  border-bottom: 1rpx solid lightgreen;
}

.add_product {
  margin-top: 60rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  color: white;
  background: #55cc65;
  text-align: center;
}

.scroll_view {
  margin-top: 60rpx;
}

.add_pic {
  display: flex;
  position: relative;
  width: 165rpx;
  height: 165rpx;
  justify-content: center;
  align-items: center
}

.add_pic image {
  width: 150rpx;
  height: 150rpx;
}

.add_tip {
  position: absolute;
  z-index: 1;
  color: grey;
  font-size: 25rpx;
  align-content: center
}

.list_view {
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  margin-right: 30rpx;
  align-items: center;
}

.item_root {
  margin-right: 30rpx;
  position: relative;
  width: 165rpx;
  height: 165rpx;
}

.item_pic {
  margin-top: 15rpx;
  margin-right: 15rpx;
  width: 150rpx;
  height: 150rpx;
}

.item_delete {
  z-index: 1;
  position: absolute;
  right: 0rpx;
  width: 40rpx;
  height: 40rpx;
}
