<!--数据统计界面-->

<!-- 选择时长 -->


<picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
	
	<view class="period_root">
		<view class="period_ret">
			<text>{{array[index]}}</text>
			<view class="triangle_down" />
		</view>
	</view>

</picker>

<!-- 订单数、交易额 -->
<view class="today_data">

	<!-- 订单数 -->
	<view class="order_num">
		<text class="desc">订单数(个)</text>
		<text>33</text>

	</view>

	<!-- 交易额 -->
	<view class="trade_num">
		<text class="desc">交易额(元)</text>
		<text>3.3</text>
	</view>

</view>


