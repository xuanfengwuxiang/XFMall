/* 商品列表自定义控件 样式 */


.productList_item {
  padding: 30rpx;
  display: flex;
  text-align: center;
  border-bottom: 1rpx solid #eeeeee
}

.productList_item_image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  align-self: center
}

.productList_item_right{
  width: 100%;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.total_money_and_num{
  align-items: right;
  display: flex;
  flex-direction: column;
}

.num{
  font-size: 24rpx;
  margin-top: 6rpx;
  color: #999;
}