/* 我的界面 样式 */

.tittle {
  height: 270rpx;
  background-size: cover;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tittle_left {
  display: flex;
  align-items: center;
}

/* 头像 */

.head {
  width: 100rpx;
  height: 100rpx;
  margin-left: 50rpx;
  border-radius: 250rpx;
}

/* 名称和登录 */

.name_login {
  margin-left: 25rpx;
  display: flex;
  flex-direction: column;
}

/* 登录按钮 */

.login {
  font-size: 24rpx;
  color: #fff;
  margin-top: 8rpx;
}

/* tittle里面的箭头 */

.tittle_arrow {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  margin-right: 50rpx;
}

/* 列表item样式 */

.item_style {
  height: 120rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  justify-content: space-between;
  margin-left: 15rpx;
  margin-right: 15rpx;
}
